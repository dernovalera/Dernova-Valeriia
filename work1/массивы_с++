#include <Windows.h>  // подключаем библиотеку для русского языка
#include <iostream>  // для ввода и вывода данных
using namespace std;  // чтобы не писать std:: перед cin (вводит пользователь) и cout (выводит компьютер)

int main() {  // начало кода
    SetConsoleCP(65001);  // чтобы вводить на русском языке
    SetConsoleOutputCP(65001);  // чтобы вsводить на русском языке
    int arr[5] = { 1, 2, 3, 4, 5 };  // создам массив из 5 целых чисел и вводим сами числа
    cout << "Элементы массива: ";  // выводим сообщение на экран
    for (int i = 0; i < 5; i++) {  // перебираем элементы массива благодаря индексам (с 0 по 4)
        cout << arr[i] << " ";  // каждый элемент выводится через пробел
    }
    cout << endl;  // переход на новую строку

    arr[2] = 10;                   // изменяем третий элемент массива (индекс 2) на 10
    cout << "После изменения: ";   // выводим сообщение на экран
    for (int i = 0; i < 5; i++) {  // перебираем элементы массива благодаря индексам (с 0 по 4)
        cout << arr[i] << " ";  // каждый элемент выводится через пробел
    }
    cout << endl;  // переход на новую строку

    return 0;   // конец программы
}
