#include <Windows.h>  // подключаем библиотеку для русского языка
#include <iostream>  // для ввода и вывода данных
#include <vector>  // подключаем библиотеку для использования динамического массива, используем для хранения списков соседей
using namespace std;  // чтобы не писать std:: перед cin (вводит пользователь) и cout (выводит компьютер)

int main() {
    SetConsoleCP(65001);  // чтобы вводить на русском языке
    SetConsoleOutputCP(65001);  // чтобы выводить на русском языке
    int V = 5; // количество вершин графа
    vector<vector<int>> graph(V); // стандартный способ представления списка смежности

    graph[0].push_back(1);  // добавляем рёбра (неориентированные)
    graph[0].push_back(4);  // добавляем рёбра (неориентированные)
    graph[1].push_back(0);  // добавляем рёбра (неориентированные)
    graph[1].push_back(2);  // добавляем рёбра (неориентированные)
    graph[1].push_back(3);  // добавляем рёбра (неориентированные)
    graph[2].push_back(1);  // добавляем рёбра (неориентированные)
    graph[3].push_back(1);  // добавляем рёбра (неориентированные)
    graph[4].push_back(0);  // добавляем рёбра (неориентированные)

    for (int i = 0; i < V; ++i) {  // перебираем все вершины
        cout << i << ": ";  // печатаем номер вершины
        for (int neighbor : graph[i]) cout << neighbor << " ";  // для каждого соседа neighbor (обозначение текущего соседа вершины) в списке graph[i] печатаем его и пробел.
        cout << "\n";  // переход на следующую строчку
    }
}
