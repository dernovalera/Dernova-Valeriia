import java.util.ArrayList;  // подключаем класс ArrayList

class Edge {  // объявляем новый класс с именем Edge, он предназначен для хранения информации о ребре графа (позволяет хранить ребро как один объект с двумя вершинами)
    int u, v;  // u - номер начальной вершины ребра, v - номер конечной вершины ребра
    Edge(int u, int v) {  // передаём вершины u и v, которые соединяет ребро
        this.u = u;  //связывание поля объекта с переданным значением (создаём ребро и говорим: у этого ребра вершина u равна этому числу, а вершина v равна этому числу)
        this.v = v;  //связывание поля объекта с переданным значением
    }
}

public class Main {
    public static void main(String[] args) {
        ArrayList<Edge> edges = new ArrayList<>();  // создаём динамический список edges для хранения объектов типа Edge
        edges.add(new Edge(0,1));  // создаём новые объекты Edge и добавляем их в список (new Edge(0,1) создаёт ребро между вершинами 0 и 1, edges.add(...) добавляет этот объект в конец списка)
        edges.add(new Edge(0,4));  // создаём новые объекты Edge и добавляем их в список
        edges.add(new Edge(1,2));  // создаём новые объекты Edge и добавляем их в список
        edges.add(new Edge(1,3));  // создаём новые объекты Edge и добавляем их в список

        for (Edge e : edges) {  // перебираем все элементы списка edges, Edge e - временная переменная, которая на каждом шаге хранит текущий объект ребра
            System.out.println(e.u + " - " + e.v);  // выводим текущее ребро: начальная вершина, "-" и конечная вершина
        }
    }
}
