#include <Windows.h>  // подключаем библиотеку для русского языка
#include <iostream>  // для ввода и вывода данных
#include <vector>  // подключаем библиотеку для использования динамического массива, используем для хранения списков соседей
using namespace std;  // чтобы не писать std:: перед cin (вводит пользователь) и cout (выводит компьютер)

int main() {
    SetConsoleCP(65001);  // чтобы вводить на русском языке
    SetConsoleOutputCP(65001);  // чтобы выводить на русском языке
    int V = 5; // количество вершин
    vector<vector<int>> matrix(V, vector<int>(V, 0)); // создаем матрицу VxV, заполненную нулями

    matrix[0][1] = 1; matrix[1][0] = 1;  // добавляем рёбра (неориентированные)
    matrix[0][4] = 1; matrix[4][0] = 1;  // это значит, что вершина 0 соединена с 4, и наоборот
    matrix[1][2] = 1; matrix[2][1] = 1;  // = 1, значит ребро между вершинами есть, если = 0, то ребра нет
    matrix[1][3] = 1; matrix[3][1] = 1;

    // выводим матрицу смежности
    cout << "Матрица смежности графа:\n";  // выводится данная строчка
    for (int i = 0; i < V; ++i) {  // проходится по строкам матрицы (i — текущая вершина)
        for (int j = 0; j < V; ++j) {  // проходится по столбцам, чтобы проверить значения каждой строки (j - индекс текущего столбца (вершина, с которой проверяем соединение))
            cout << matrix[i][j] << " ";  // выводим значение ячейки матрицы (1 - есть ребро, 0 - нет ребра)
        }
        cout << "\n";  // переход на новую строчку
    }

    return 0;
}
// программа выведет:
// Матрица смежности графа:
// 0 1 0 0 1 - это означает, что вершина 0 соединена с 1 и 4
// 1 0 1 1 0 - это означает, что вершина 1 соединена с 0, 2 и 3
// 0 1 0 0 0 - это означает, что вершина 2 соединена с 1
// 0 1 0 0 0 - это означает, что вершина 3 соединена с 1
// 1 0 0 0 0 - это означает, что вершина 4 соединена с 0
