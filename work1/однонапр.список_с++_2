#include <Windows.h>  // подключаем библиотеку для русского языка
#include <iostream>  // для ввода и вывода данных
using namespace std;  // чтобы не писать std:: перед cin (вводит пользователь) и cout (выводит компьютер)

struct Node {  // задаем структуру "узел"
    int data;  // храним число
    Node* next;  // указатель на следующий узел
    Node(int x) : data(x), next(nullptr) {} // заполняем поле data значением x, а next(nullptr) - новый узел по умолчанию хвост
};

int main() {  // начало главной функции
    SetConsoleCP(65001);  // чтобы вводить на русском языке
    SetConsoleOutputCP(65001);  // чтобы выводить на русском языке
    Node* head = new Node(8);          // создаём первый узел
    Node* tail = head;                 // хвост указывает на последний элемент

    tail->next = new Node(2);  // создаётся второй узел в куче и добавляем его в конец
    tail = tail->next;  // хвост указывает на второй узел
    tail->next = new Node(5);  // добавляем третий узел в конец
    tail = tail->next;  // хвост указывает на третий (последний) узел

    for (Node* p = head; p; p = p->next)  // выводим по порядку список начиная с головы
        cout << p->data << " ";  // печатаем поле data текущего узла и пробел
}
