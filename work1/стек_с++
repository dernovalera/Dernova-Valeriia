#include <Windows.h>  // подключаем библиотеку для русского языка
#include <iostream>  // для ввода и вывода данных
using namespace std;  // чтобы не писать std:: перед cin (вводит пользователь) и cout (выводит компьютер)

class Stack {  // объявление класса Stack
    int arr[5];   // массив для хранения элементов стека
    int top;      // индекс вершины
public:  // члены доступны откуда угодно: из main(), из других классов и функций
    Stack() : top(-1) {}             // при создании стек пуст
    void push(int x) { arr[++top] = x; } // push добавляет элемент в стек, top (индекс верхнего элемента) увеличивается на 1, затем в ячейку arr[top] записывается x
    void pop() { top--; }                // pop удаляет верхний элемент стека
    int peek() { return arr[top]; }      // peek возвращает значение верхнего элемента, не удаляя его
};  // конец объявления класса

int main() {  // начало главной функции
    SetConsoleCP(65001);  // чтобы вводить на русском языке
    SetConsoleOutputCP(65001);  // чтобы выводить на русском языке
    Stack st;
    st.push(10);         // кладём 10 и top станет 0
    st.push(20);         // кладём 20 и top станет 1
    cout << st.peek();   // выводим на экран верхушку (20)
}
