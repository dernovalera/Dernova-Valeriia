import java.util.Scanner; // подключаем класс Scanner для ввода с клавиатуры

public class Main {
    public static void main(String[] args) { // точка входа в программу, здесь начинается выполнение
        Scanner scanner = new Scanner(System.in); // создаём объект для чтения данных

        System.out.print("Введите количество чисел: "); // выводим сообщение на экран, чтобы пользователь понимал, что нужно ввести
        int size = scanner.nextInt(); // пользователь вводит число, оно сохраняется в переменной size и определяет размер массива

        int[] numbers = new int[size]; // создаём массив указанного размера (число, которое ввел пользователь)
        int sum = 0; // переменная для суммы

        // вводим числа
        for (int i = 0; i < size; i++) { // цикл повторяется size раз
            System.out.print("Введите число #" + (i + 1) + ": "); // выводим на экран, (i + 1) — чтобы нумерация начиналась с 1, а не с 0
            numbers[i] = scanner.nextInt(); // сохраняем число в массив
            sum += numbers[i]; // сразу добавляем в сумму число
        }


        System.out.println("Сумма всех чисел = " + sum);// выводим сумму
    }
}
